<mvc:View	xmlns:core="sap.ui.core"
			xmlns:mvc="sap.ui.core.mvc"
			xmlns:f="sap.ui.layout.form"
			xmlns="sap.m"
			controllerName="mccoy.com.URE2.controller.NewRun"
			xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page	title="{i18n>pageNewRun}"
					showNavButton="true"
					navButtonPress="onBack">
				<content>
					<VBox	class="sapUiSmallMargin">

						<FlexBox	height="100px"
									alignItems="Center"
									justifyContent="Start">
			    			<Text	text="{i18n>autonomous}"/>
							<Switch type="AcceptReject" 
									state="true"
									change="onCarTypeRBChange">
								<layoutData>
									<FlexItemData growFactor="0.15" />
								</layoutData>
							</Switch>
						</FlexBox>
	
						<HBox height="100%" alignItems="Center">
							<Label	id="lblWeatherConditions"
									text="{i18n>weatherCond}"/>
							<ComboBox items="{	path: '',
												sorter: { path: 'text' } }">
								<core:Item key="{key}" text="{text}" />
							</ComboBox>
						</HBox>
	
						<HBox height="100%" alignItems="Center">
							<Label	id="lblTemperature"
									text="{i18n>temperature}"/>
							<ComboBox items="{	path: '',
												sorter: { path: 'text' } }">
								<core:Item key="{key}" text="{text}" />
							</ComboBox>
						</HBox>
	
						<HBox height="100%" alignItems="Center">
							<Label	id="lblTestType"
									text="{i18n>testType}"/>
							<ComboBox items="{	path: '',
												sorter: { path: 'text' } }">
								<core:Item key="{key}" text="{text}" />
							</ComboBox>
						</HBox>
	
						<HBox height="100%" alignItems="Center">
							<Label	id="lblCircuit"
									text="{i18n>circuit}"/>
		    				<Input 	id="inpCircuit"
		    						value=""
		    						width="220px"
		    						fieldWidth="160px"
		    						class="sapUiSmallMarginBottom"/>
						</HBox>
	
						<HBox height="100%" alignItems="Center">
							<Label	id="lblNotes"
									text="{i18n>notes}"/>
							<TextArea	id="inpNotes"
										wrapping="None"
			    						width="660px"
			    						fieldWidth="600px"
										value="{	path : '',
													type : 'sap.ui.model.type.String' }"/>
						</HBox>

			    	</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>