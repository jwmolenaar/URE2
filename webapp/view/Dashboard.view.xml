<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="mccoy.com.URE2.controller.Dashboard"
	xmlns:layout="sap.ui.layout" xmlns:mc="sap.suite.ui.microchart" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>dashboardTitle}" showNavButton="true" navButtonPress="onBack">
				<layout:VerticalLayout class="sapUiResponsiveMargin">
					<Title titleStyle="H3" text="" class="sapUiTinyMarginBegin"/>
					<layout:HorizontalLayout allowWrapping="true">
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" id="status" header="Status indicators" frameType="TwoByOne"
							press="pressStatusTemp">
							<tileContent>
								<TileContent footer="High Voltage (HV)">
									<content>
										<mc:HarveyBallMicroChart showFractions="false" showTotal="false">
											<mc:items>
												<mc:HarveyBallMicroChartItem id="highVoltageChart" fraction="100" color="Error"/>
											</mc:items>
										</mc:HarveyBallMicroChart>
									</content>
								</TileContent>
								<TileContent footer="Drive">
									<content>
										<mc:HarveyBallMicroChart showFractions="false" showTotal="false">
											<mc:items>
												<mc:HarveyBallMicroChartItem fraction="100" color="Good"/>
											</mc:items>
										</mc:HarveyBallMicroChart>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" id="fuseBox1" header="Fusebox A-B" frameType="TwoByOne">
							<tileContent>
								<TileContent footer="A">
									<content>
										<mc:HarveyBallMicroChart showFractions="false" showTotal="false">
											<mc:items>
												<mc:HarveyBallMicroChartItem fraction="100" color="Good"/>
											</mc:items>
										</mc:HarveyBallMicroChart>
									</content>
								</TileContent>
								<TileContent footer="B">
									<content>
										<mc:HarveyBallMicroChart showFractions="false" showTotal="false">
											<mc:items>
												<mc:HarveyBallMicroChartItem fraction="100" color="Error"/>
											</mc:items>
										</mc:HarveyBallMicroChart>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" id="fuseBox2" header="Fusebox C-D" frameType="TwoByOne">
							<tileContent>
								<TileContent footer="C">
									<content>
										<mc:HarveyBallMicroChart showFractions="false" showTotal="false">
											<mc:items>
												<mc:HarveyBallMicroChartItem fraction="100" color="Good"/>
											</mc:items>
										</mc:HarveyBallMicroChart>
									</content>
								</TileContent>
								<TileContent footer="D">
									<content>
										<mc:HarveyBallMicroChart showFractions="false" showTotal="false">
											<mc:items>
												<mc:HarveyBallMicroChartItem fraction="100" color="Good"/>
											</mc:items>
										</mc:HarveyBallMicroChart>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
						
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Battery">
							<TileContent>
								<NumericContent value="78" valueColor="Good" formatterValue="true" scale="%" />
							</TileContent>
						</GenericTile>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Another tile">
							<TileContent>
								<ImageContent src="sap-icon://accelerated"/>
							</TileContent>
						</GenericTile>
					</layout:HorizontalLayout>
				</layout:VerticalLayout>
			</Page>
		</pages>
	</App>
</mvc:View>